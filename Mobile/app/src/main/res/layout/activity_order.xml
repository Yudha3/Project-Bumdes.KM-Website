<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OrderActivity">

    <TextView
        android:id="@+id/tAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat Penerima"
        android:textSize="16sp"
        android:fontFamily="@font/productsans_bold"
        android:textColor="#404040"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/et_alamat_transaksi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tAlamat"
        android:background="@drawable/custom_input"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/productsans_regular"
        android:hint="Masukkan alamat"
        android:paddingLeft="12dp"
        android:paddingVertical="6dp"
        android:textSize="15sp"
        android:inputType="text"
        android:maxLines="3"/>

    <TextView
        android:id="@+id/tTelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon Penerima"
        android:textSize="16sp"
        android:fontFamily="@font/productsans_bold"
        android:textColor="#404040"
        app:layout_constraintTop_toBottomOf="@id/et_alamat_transaksi"
        android:layout_marginTop="16dp"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/et_notelp_transaksi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tTelp"
        android:background="@drawable/custom_input"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/productsans_regular"
        android:hint="Masukkan nomor telepon"
        android:paddingLeft="12dp"
        android:paddingVertical="6dp"
        android:textSize="15sp"
        android:inputType="phone"
        android:maxLines="3"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_notelp_transaksi"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tCount"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Total Belanja"
        android:textSize="15sp"
        android:fontFamily="@font/productsans_medium"
        android:textColor="#404040"
        app:layout_constraintTop_toBottomOf="@id/rvOrder"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_total_order"/>

    <TextView
        android:id="@+id/txt_total_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="0.6"
        android:text="000.000"
        android:textSize="15sp"
        android:fontFamily="@font/productsans_bold"
        android:textColor="@color/primaryGreen"
        app:layout_constraintTop_toBottomOf="@id/rvOrder"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@id/tCount"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040"
        android:id="@+id/v1"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_total_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="9dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tOngkir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pengiriman"
        android:textSize="16sp"
        android:fontFamily="@font/productsans_bold"
        android:textColor="#404040"
        app:layout_constraintTop_toBottomOf="@id/v1"
        android:layout_marginTop="9dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tOngkir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp">

        <RadioGroup
            android:id="@+id/radioGroup_ongkir"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reguler - Rp 30.000"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Express - Rp 48.000"
                android:layout_marginStart="20dp"/>

        </RadioGroup>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>