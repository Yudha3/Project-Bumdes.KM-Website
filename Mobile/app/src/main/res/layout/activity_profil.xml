<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ProfilActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryGreen">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profil_profil"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"
            android:src="@drawable/bg_foto_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/txtID_User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID User"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:visibility="invisible"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/title_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/productsans_medium"
            app:layout_constraintStart_toEndOf="@id/img_profil_profil"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/title_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="emaii@example.com"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/productsans_medium"
            app:layout_constraintStart_toEndOf="@id/img_profil_profil"
            app:layout_constraintTop_toBottomOf="@id/title_username"
            android:layout_marginStart="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_edit_profil"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:text="Edit"
            android:textColor="#404040"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/productsans_regular"
            android:background="@drawable/white_retangle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textSize="16sp"
            android:textColor="@color/primaryGreen"
            android:fontFamily="@font/productsans_medium"/>

        <TextView
            android:id="@+id/txt_nama_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Yoga Andrian"
            android:textSize="15sp"
            android:textColor="#404040"
            android:fontFamily="@font/productsans_medium"/>

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16sp"
            android:textColor="@color/primaryGreen"
            android:fontFamily="@font/productsans_medium"/>

        <TextView
            android:id="@+id/txt_username_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="yoga"
            android:textSize="15sp"
            android:textColor="#404040"
            android:fontFamily="@font/productsans_medium"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="16sp"
            android:textColor="@color/primaryGreen"
            android:fontFamily="@font/productsans_medium"/>

        <TextView
            android:id="@+id/txt_email_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="yoga@gmail.com"
            android:textSize="15sp"
            android:textColor="#404040"
            android:fontFamily="@font/productsans_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textSize="16sp"
            android:textColor="@color/primaryGreen"
            android:fontFamily="@font/productsans_medium"/>

        <TextView
            android:id="@+id/txt_notelp_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="08123456789"
            android:textSize="15sp"
            android:textColor="#404040"
            android:fontFamily="@font/productsans_medium"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>