<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:visibility="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardElevation="4dp"
    android:paddingHorizontal="6dp"
    android:id="@+id/produk_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imgProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_foto_default"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/tvID_Brg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Buku"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Buku"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Buku"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginEnd="24dp"
                android:layout_height="wrap_content"
                android:text="Preorder"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:paddingHorizontal="12dp"
                android:text="Preorder"
                android:textColor="#ffffff"
                android:layout_marginEnd="12dp"
                android:textAlignment="center"
                android:background="@drawable/bg_red" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="Nama Barang"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#303030"
            android:fontFamily="@font/productsans_regular"/>

        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Penulis"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primaryGreen"
            android:fontFamily="@font/productsans_medium"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

